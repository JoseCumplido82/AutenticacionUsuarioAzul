<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/holo_orange_light"
    tools:context=".RegistroActivity">

    <ImageView
        android:id="@+id/img_registro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:contentDescription="@string/registro_de_usuario"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/persona" />

    <EditText
        android:id="@+id/edt_nombre_r"
        android:layout_width="259dp"
        android:layout_height="47dp"
        android:layout_marginTop="16dp"
        android:background="@android:color/holo_orange_dark"
        android:ems="10"
        android:gravity="center"
        android:hint="Nombre"
        android:inputType="textPersonName"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img_registro" />

    <EditText
        android:id="@+id/edt_direccion_r"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@android:color/holo_orange_dark"
        android:ems="10"
        android:gravity="center"
        android:hint="Direccion"
        android:inputType="textPersonName"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/edt_nombre_r"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/edt_nombre_r"
        app:layout_constraintTop_toBottomOf="@+id/edt_nombre_r" />

    <EditText
        android:id="@+id/edt_phone_r"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@android:color/holo_orange_dark"
        android:ems="10"
        android:gravity="center"
        android:hint="Telefono"
        android:inputType="phone"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/edt_direccion_r"
        app:layout_constraintStart_toStartOf="@+id/edt_direccion_r"
        app:layout_constraintTop_toBottomOf="@+id/edt_direccion_r" />

    <EditText
        android:id="@+id/edt_email_r"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@android:color/holo_orange_dark"
        android:ems="10"
        android:gravity="center"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/edt_phone_r"
        app:layout_constraintStart_toStartOf="@+id/edt_phone_r"
        app:layout_constraintTop_toBottomOf="@+id/edt_phone_r" />

    <EditText
        android:id="@+id/edt_password_r"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@android:color/holo_orange_dark"
        android:ems="10"
        android:gravity="center"
        android:hint="Password"
        android:inputType="textPassword"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/edt_email_r"
        app:layout_constraintStart_toStartOf="@+id/edt_email_r"
        app:layout_constraintTop_toBottomOf="@+id/edt_email_r" />

    <EditText
        android:id="@+id/edt_password2_r"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@android:color/holo_orange_dark"
        android:ems="10"
        android:gravity="center"
        android:hint="Password2"
        android:inputType="textPassword"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/edt_password_r"
        app:layout_constraintStart_toStartOf="@+id/edt_password_r"
        app:layout_constraintTop_toBottomOf="@+id/edt_password_r" />

    <Button
        android:id="@+id/bt_crear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:background="@android:color/holo_red_light"
        android:text="crear"
        android:textSize="24sp"
        android:textStyle="bold"
        android:onClick="crear"
        app:layout_constraintEnd_toEndOf="@+id/edt_password2_r"
        app:layout_constraintStart_toStartOf="@+id/edt_password2_r"
        app:layout_constraintTop_toBottomOf="@+id/edt_password2_r" />

</androidx.constraintlayout.widget.ConstraintLayout>